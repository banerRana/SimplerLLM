{
  "appId": "com.simplerllm.playground",
  "productName": "SimplerLLM Playground",
  "copyright": "Â© 2026 LearnWithHasan",
  "directories": {
    "output": "dist"
  },
  "files": [
    "electron/**/*",
    "renderer/**/*",
    "backend/**/*",
    "package.json"
  ],
  "asarUnpack": [
    "backend/**/*"
  ],
  "extraResources": [
    {
      "from": "python",
      "to": "python",
      "filter": ["**/*"]
    }
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      },
      {
        "target": "portable",
        "arch": ["x64"]
      }
    ],
    "icon": "renderer/assets/icons/icon.ico"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true
  },
  "mac": {
    "target": ["dmg", "zip"],
    "icon": "renderer/assets/icons/icon.icns",
    "category": "public.app-category.developer-tools"
  },
  "linux": {
    "target": ["AppImage", "deb"],
    "icon": "renderer/assets/icons",
    "category": "Development"
  }
}
